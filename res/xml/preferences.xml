<EditTextPreference android:summary="Default dictionary to load" android:title="Default dictionary" android:key="defaultDict"></EditTextPreference>

</PreferenceCategory><PreferenceCategory android:summary="Start automatically activities at start-up" android:title="Auto start" android:key="autostart"><CheckBoxPreference android:summary="Load the last dictionary after start-up" android:defaultValue="false" android:key="autoloadlast" android:title="Auto load last dictionary"></CheckBoxPreference>
