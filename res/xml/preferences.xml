</PreferenceCategory><PreferenceCategory android:title="Storage">
		<EditTextPreference android:summary="This folder contains the dictionary folders" android:defaultValue="/sdcard/dict/" android:title="Dictionary folder" android:selectable="true" android:key="dictfolder">
