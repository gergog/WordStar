<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
android:id="@+id/widget33"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:orientation="vertical"
xmlns:android="http://schemas.android.com/apk/res/android"
>
    <LinearLayout
        android:id="@+id/widget42"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        >
        <TextView
            android:id="@+id/widget34"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="English : "
            android:layout_gravity="center_vertical"
            >
        </TextView>
        <Button
            android:id="@+id/pronounceEnglish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pronounce"
            android:hint="Pronounce"
            android:gravity="center"
            >
        </Button>
    </LinearLayout>
    <EditText
        android:id="@+id/englishstoredialog"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=""
        >
    </EditText>
    <TextView
        android:id="@+id/widget37"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hungarian : "
        >
    </TextView>
    <EditText
        android:id="@+id/hungarianstoredialog"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=""
        >
    </EditText>
    <LinearLayout
        android:id="@+id/widget43"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        >
        <TextView
            android:id="@+id/widget45"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Example :"
            android:layout_gravity="center_vertical"
            >
        </TextView>
        <Button
            android:id="@+id/pronounceExample"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pronounce"
            >
        </Button>
    </LinearLayout>
    <EditText
        android:id="@+id/examplestoredialog"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        >
    </EditText>
</LinearLayout>
