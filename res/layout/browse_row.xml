<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:orientation="vertical"
    android:padding="6dip">
    <LinearLayout
        android:id="@+id/br_ll1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
    >
 
        <LinearLayout
            android:id="@+id/br_ll2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
        >
            <TextView
                android:id="@+id/englishtext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center_vertical"
            />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3" 
                android:id="@+id/hungariantext"
                android:singleLine="true"
                android:ellipsize="marquee"
            />
        </LinearLayout>
        <ImageView
            android:id="@+id/br_image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/expander_ic_minimized"
        >
        </ImageView>
    </LinearLayout>
        
    <ViewStub
            android:id="@+id/browse_stub_import"
            android:inflatedId="@+id/sentences"
            android:layout="@layout/browse_row_inflate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom" />    
            

</LinearLayout>
   